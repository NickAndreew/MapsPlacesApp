<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_relLayout"
    android:background="@drawable/screenshot_map">

<!--    <fragment xmlns:android="http://schemas.android.com/apk/res/android"-->
<!--        xmlns:tools="http://schemas.android.com/tools"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:id="@+id/map"-->
<!--        tools:context=".MapsActivity"-->
<!--        android:name="com.google.android.gms.maps.SupportMapFragment" />-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:elevation="10dp"
        android:background="@drawable/white_border"
        android:id="@+id/relLayout1_guide">

        <ImageView
            android:id="@+id/ic_magnify_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_magnify" />

        <AutoCompleteTextView
            android:id="@+id/input_search_guide"
            android:layout_width="348dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/ic_magnify_guide"
            android:layout_toRightOf="@id/ic_magnify_guide"
            android:background="@null"
            android:editable="false"
            android:hint="Enter Address, City or Zip Code"
            android:imeOptions="actionSearch"
            android:textColor="#000"
            android:textSize="15sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ic_gps_guide"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/relLayout1_guide"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_gps" />

    <ImageView
        android:id="@+id/place_picker_guide"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/relLayout1_guide"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_map" />

    <ImageView
        android:id="@+id/place_info_guide"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/place_picker_guide"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_info" />

    <TextView
        android:id="@+id/general_guide_text"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:maxLines="3"
        android:shadowColor="@color/quantum_black_text"
        android:shadowDx="40"
        android:shadowDy="40"
        android:text="Welcome to the Maps and Places!"
        android:textAlignment="center"
        android:textColor="@color/quantum_black_secondary_text"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_next_guidance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:text="Next" />

</RelativeLayout>